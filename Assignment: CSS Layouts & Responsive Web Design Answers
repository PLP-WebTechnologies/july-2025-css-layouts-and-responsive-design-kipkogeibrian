/* Responsive Design - Media Queries */
@media (max-width: 1024px) {
    .grid-container {
        grid-template-columns: 1fr;
        grid-template-areas:
            "hero"
            "features"
            "sidebar"
            "testimonials";
    }

    .sidebar {
        position: static;
    }

    .feature-cards {
        flex-direction: column;
    }
}

@media (max-width: 768px) {
    .main-nav {
        display: none;
    }

    .mobile-menu-btn {
        display: block;
    }

    .hero {
